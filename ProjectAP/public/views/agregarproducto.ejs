                    <option value="firestick">Fire Stick</option>
                    <option value="roku">Roku</option>
                </select>
            </div>
            <div class="form-group">
                <label for="trailer" class = "textos">Trailer</label>
                <input type="text" id="trailer" name="trailer" placeholder="">
            </div>
            <div class="form-group">
                <label for="tipo" class = "textos">Tipo</label>
                <select id="tipo" name="tipo">
                    <option value="">Selecciona un tipo</option>
                    <option value="serie">Serie</option>
                    <option value="pelicula">Película</option>
                    <option value="documental">Documental</option>
                </select>
            </div>
            <!-- boton de volver y guardar -->
            @if($tipo == "serie")
            <div class="form-group">
                <label for="temporadas" class = "textos">Temporadas</label>
                <input type="number" id="temporadas" name="temporadas" placeholder="Temporadas">
            </div>
            @endif
            <!-- se pide la cantidad de episodios si es una serie o documnetal -->
            @if($tipo == "serie" || $tipo == "documental")
            <div class="form-group">
                <label for="episodios" class = "textos">Episodios</label>
                <input type="number" id="episodios" name="episodios" placeholder="Episodios">
            </div>
            @endif
            <!-- boton de volver y guardar -->
            <div class="form-group">
                <button type="button" class="boton" onclick="history.back()">Volver</button>
                <button type="submit" class="boton">Guardar</button>
            </div>
        </form>
        <form action="agregarStaff" method="post">
            <label for="Trabajos" class = "textos">Creativo:</label>
            <button href="agregarStaff" class = "boton">Agregar</button>
            <div class="Direccion">
                <label for="Creativo" class = "textos">Nombre</label>
                <label for="rol" class = "textos">Rol</label>
                <!-- <input type="text" id="direccion" name="direccion" placeholder="Cédula"> -->
            </div>
            <div class="Direccion">
            <!-- se saca los productos de la base de datos -->
                <select id="creativo" name="creativo">
                    <!-- se valida que productos este definido -->
                    <% if (typeof staff != "undefined")  { %>
                        <!-- se recorre el arreglo de productos -->
                        <% staff.forEach(creativo => { %>
                            <option value="<%= creativo.ifStaff %>"><%= creativo.staff_name %></option>
                        <% }) %>
                    <% } %>
                
                </select>
                <input type="text" id="rol" name="rol" placeholder="Rol" required>
            </div>
        </form>
    
