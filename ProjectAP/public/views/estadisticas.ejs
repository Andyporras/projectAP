        <div class="cont contenedor">
            <div class = "titulo textos">Bitácora</div>
              <table class="table table-bordered">
                  <thead class="titulos">
                      <tr>
                          <% if (datosBi.length > 0) { %>
                              <% for(const key in datosBi[0]) { %>
                                  <th><%= key %></th>
                              <% } %>
                          <% } %>
                      </tr>
                  </thead>
                  <tbody class="titulos">
                      <% datosBi.forEach(record => { %>
                          <tr>
                              <% for(const key in record) { %>
                                  <td><% 
                                    const value = record[key];
                                    let displayValue = value;
                                    if (Object.prototype.toString.call(value) === '[object Date]' || !isNaN(Date.parse(value))) {
                                        const date = new Date(value);
                                        displayValue = `${date.getDate()}/${date.getMonth() + 1}/${date.getFullYear()} ${date.getHours()}:${date.getMinutes()}:${date.getSeconds()}`;
                                    }
                                    %>
                                    <%= displayValue %></td>
                              <% } %>
                          </tr>
                      <% }) %>
                  </tbody>
              </table>

               <div>
                <button class = "boton " onclick="history.back()">Volver</button>
               </div>
    
        </div>
